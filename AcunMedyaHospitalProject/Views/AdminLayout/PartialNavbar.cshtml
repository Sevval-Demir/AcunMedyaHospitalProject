<nav class="navbar col-lg-12 col-12 p-lg-0 fixed-top d-flex flex-row">
    <div class="navbar-menu-wrapper d-flex align-items-stretch justify-content-between">
        <a class="navbar-brand brand-logo-mini align-self-center d-lg-none" href="index.html">
            <img src="assets/images/logo-mini.svg" alt="logo" />
        </a>
        <button class="navbar-toggler navbar-toggler align-self-center mr-2" type="button" data-toggle="minimize">
            <i class="mdi mdi-menu"></i>
        </button>
        <ul class="navbar-nav">
            <!-- 🔥 Bekleyen Randevular Bildirimi -->
            <li class="nav-item dropdown">
                <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-toggle="dropdown">
                    <i class="mdi mdi-bell-outline"></i>
                    @if (ViewBag.PendingAppointmentCount > 0)
                    {
                        <span class="count count-varient1">@ViewBag.PendingAppointmentCount</span>
                    }
                </a>
                <div class="dropdown-menu navbar-dropdown navbar-dropdown-large preview-list" aria-labelledby="notificationDropdown">
                    <h6 class="p-3 mb-0">Bekleyen Randevular</h6>

                    @foreach (var appointment in ViewBag.PendingAppointments)
                    {
                        <a class="dropdown-item preview-item">
                            <div class="preview-item-content">
                                <p class="mb-0">
                                    <strong>@appointment.PatientFirstName @appointment.PatientLastName</strong>
                                    <span class="text-small text-muted">Randevu: @appointment.Date.ToString("dd/MM/yyyy")</span>
                                </p>
                            </div>
                        </a>
                    }

                    <div class="dropdown-divider"></div>
                    <p class="p-3 mb-0">
                        <a href="/Appointment/Index">Tüm randevuları görüntüle</a>
                    </p>
                </div>
            </li>

            <!-- 🔥 Okunmamış Mesaj Bildirimi -->
            <li class="nav-item dropdown">
                <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown">
                    <i class="mdi mdi-email-outline"></i>
                    @if (ViewBag.UnreadMessageCount > 0)
                    {
                        <span class="count count-varient2">@ViewBag.UnreadMessageCount</span>
                    }
                </a>
                <div class="dropdown-menu navbar-dropdown navbar-dropdown-large preview-list" aria-labelledby="messageDropdown">
                    <h6 class="p-3 mb-0">Okunmamış Mesajlar</h6>

                    @foreach (var message in ViewBag.UnreadMessages)
                    {
                        <a class="dropdown-item preview-item">
                            <div class="preview-item-content">
                                <p class="mb-0">
                                    <strong>@message.SenderName</strong>
                                    <span class="text-small text-muted">@message.Subject</span>
                                </p>
                            </div>
                        </a>
                    }

                    <div class="dropdown-divider"></div>
                    <p class="p-3 mb-0">
                        <a href="/Message/Index">Tüm mesajları görüntüle</a>
                    </p>
                </div>
            </li>
        </ul>
        <ul class="navbar-nav navbar-nav-right ml-lg-auto">
            <li class="nav-item nav-profile dropdown border-0">
                <a class="nav-link dropdown-toggle" id="profileDropdown" href="#" data-toggle="dropdown">
                    <img class="nav-profile-img mr-2" alt="" src="~/Templates/Breeze-Free-Bootstrap-Admin-Template-1.0.0/template/assets/images/faces/resim.jpg" />
                    <span class="profile-name">@User.Identity.Name</span>
                </a>
                <div class="dropdown-menu navbar-dropdown w-100" aria-labelledby="profileDropdown">
                    <a class="dropdown-item" href="#">
                        <i class="mdi mdi-cached mr-2 text-success"></i> Gizlilik Ayarları
                    </a>
                    <a class="dropdown-item" href="#">
                        <i class="mdi mdi-logout mr-2 text-primary"></i> Çıkış Yap
                    </a>
                </div>
            </li>
        </ul>

        <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
            <span class="mdi mdi-menu"></span>
        </button>
    </div>
</nav>
